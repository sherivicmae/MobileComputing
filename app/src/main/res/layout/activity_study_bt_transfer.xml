<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="729dp"
    android:layout_width="409dp"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".StudyBtTransfer">

        <TextView
            android:id="@+id/lb_BluetoothTitle"
            android:layout_width="373dp"
            android:layout_height="44dp"
            android:background="@drawable/calcu_result_bg"
            android:fontFamily="@font/league_spartan_bold"
            android:text="Bluetooth File Transfer"
            android:textAlignment="center"
            android:textColor="@color/white_calcu"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/league_spartan_bold"
            android:text="Case Study"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.055"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_BluetoothIntro"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend_light"
            android:justificationMode="inter_word"
            android:text="@string/tv_BluetoothIntro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lb_BTIntroTitle" />

        <TextView
            android:id="@+id/lb_BTIntroTitle"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/league_spartan_bold"
            android:text="@string/tv_BTIntroTitle"
            android:textAlignment="center"
            android:textColor="@color/my_primary"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lb_BluetoothTitle" />

        <TextView
            android:id="@+id/tv_BTBasicConcepts"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/league_spartan_bold"
            android:text="Basic Concepts"
            android:textAlignment="center"
            android:textColor="@color/my_primary"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_BluetoothIntro" />

        <TextView
            android:id="@+id/tv_BTBasicConceptsIntro"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend_light"
            android:justificationMode="inter_word"
            android:text="Bluetooth Standards and Versions: Bluetooth technology has evolved significantly since its inception. The major versions include: "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_BTBasicConcepts" />

        <TextView
            android:id="@+id/tv_BTTimeline"
            android:layout_width="353dp"
            android:layout_height="289dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lexend_light"
            android:justificationMode="inter_word"
            android:text="@string/tv_BTTimeline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_BTBasicConceptsIntro" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:layout_editor_absoluteY="693dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
