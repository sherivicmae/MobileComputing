<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".StudyHome">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="228dp"
        android:layout_height="64dp"
        android:text="Case Studies"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />

    <Button
        android:id="@+id/btn_InfraredStudy"
        android:layout_width="336dp"
        android:layout_height="81dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/white_calcu"
        android:fontFamily="@font/league_spartan_extrabold"
        android:shadowColor="@color/darker_blue"
        android:text="Infrared Communication"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/button2"
        android:layout_width="336dp"
        android:layout_height="81dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white_calcu"
        android:fontFamily="@font/league_spartan_extrabold"
        android:text="Bluetooth File Transfer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_InfraredStudy" />

    <Button
        android:id="@+id/button3"
        android:layout_width="336dp"
        android:layout_height="81dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white_calcu"
        android:fontFamily="@font/league_spartan_extrabold"
        android:text="Bluetooth device in File Transfer"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

</androidx.constraintlayout.widget.ConstraintLayout>