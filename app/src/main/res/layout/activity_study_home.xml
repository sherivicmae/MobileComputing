<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".StudyHome">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="296dp"
        android:layout_height="64dp"
        android:fontFamily="@font/league_spartan_bold"
        android:shadowColor="@color/white_calcu"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="10"
        android:text="Case Studies"
        android:textAlignment="center"
        android:textColor="@color/my_primary"
        android:textSize="50sp"
        app:fontFamily="@font/league_spartan_extrabold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104" />

    <Button
        android:id="@+id/btn_InfraredStudy"
        android:layout_width="336dp"
        android:layout_height="81dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="@color/frame_color"
        android:fontFamily="@font/league_spartan_extrabold"
        android:shadowColor="@color/darker_blue"
        android:text="Infrared Communication"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:icon="@drawable/baseline_waves_24"
        app:iconPadding="20dp"
        app:iconSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btn_BTFileTransfer"
        android:layout_width="336dp"
        android:layout_height="81dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/frame_color"
        android:fontFamily="@font/league_spartan_extrabold"
        android:text="Bluetooth File Transfer"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:icon="@drawable/bluetooth"
        app:iconPadding="20dp"
        app:iconSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_InfraredStudy" />

    <Button
        android:id="@+id/btn_BTWirelessTransfer"
        android:layout_width="336dp"
        android:layout_height="81dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/frame_color"
        android:fontFamily="@font/league_spartan_extrabold"
        android:text="Bluetooth Wireless Transfer"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:icon="@drawable/wireless"
        app:iconPadding="20dp"
        app:iconSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_BTFileTransfer" />

    <Button
        android:id="@+id/btn_backHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Button"
        app:icon="@drawable/home_calcu"
        app:iconGravity="top"
        app:iconSize="30dp"
        app:iconTint="@color/white_calcu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>